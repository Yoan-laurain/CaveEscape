<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/cave_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cave_logo_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:screenOrientation="portrait">

        <activity
            android:name=".Game.GameActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sandbox.SandboxActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sandbox.SandboxMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Info.InfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Option.OptionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LevelSelect.SelectActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenu.LoadingActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>